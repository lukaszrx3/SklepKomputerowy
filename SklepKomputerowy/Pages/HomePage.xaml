<Page x:Class="SklepKomputerowy.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SklepKomputerowy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="Aquamarine">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Gorny rzad -->
        <StackPanel Grid.Row="0" Background="SteelBlue">
            <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="Bold">
                Sklep Komputerowy
            </TextBlock>
        </StackPanel>

        <!-- Dolny rzad -->
        <Grid Grid.Row="1" Background="Brown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- Lewy -->
            <StackPanel Grid.Column="0" Background="#FF244664">
                <TextBlock Foreground="AliceBlue">Kontakt</TextBlock>
                <TextBlock Foreground="AliceBlue">Ul. Taka i taka</TextBlock>
                <TextBlock Foreground="AliceBlue">Miasto: Rzeszow</TextBlock>
                <TextBlock Foreground="AliceBlue">Podkarpacie</TextBlock>
                <TextBlock Foreground="AliceBlue"></TextBlock>
                <TextBlock Foreground="AliceBlue"><Run FontWeight="Bold" Text="Godziny otwarcia"/></TextBlock>
                <TextBlock Foreground="AliceBlue"><Run Text="poniedziałek-piątek"/><Run Text="&#x9;&#x9;"/><Run Text="0"/><Run Text="9:00-21:00"/></TextBlock>
                <TextBlock Foreground="AliceBlue"><Run Text="sobota"/><Run Text="&#x9;&#x9;&#x9;&#x9;10:00"/><Run Text="-20:00"/></TextBlock>
            </StackPanel>

            <!-- Prawy -->
            <StackPanel Grid.Column="1" Background="DarkOrange">
                <TextBlock>Wykonal:</TextBlock>
                <TextBlock>Lukasz Radzik i Marcin Gudyka</TextBlock>
                <TextBlock>Semestr: 4</TextBlock>
                <TextBlock>Specjlnosc: Internet Rzeczy</TextBlock>
                <TextBlock>Kierunek: Informatyka</TextBlock>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
